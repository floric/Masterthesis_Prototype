{
  "name": "backend",
  "version": "1.0.0",
  "main": "dist/main.js",
  "scripts": {
    "build": "parcel build src/main.ts --target node --no-cache ",
    "clean": "rm -rf dist node_modules .cache",
    "start": "concurrently \"parcel watch src/main.ts --target node\" \"cross-env NODE_ENV=development nodemon dist/main.js\""
  },
  "dependencies": {
    "@types/body-parser": "1.17.0",
    "@types/express": "^4.0.39",
    "@types/helmet": "0.0.37",
    "@types/morgan": "^1.7.35",
    "apollo-server-express": "^1.3.6",
    "apollo-upload-server": "^5.0.0",
    "body-parser": "^1.18.2",
    "cors": "^2.8.4",
    "cross-env": "^5.1.4",
    "express": "^4.16.2",
    "express-graphql": "^0.6.12",
    "fast-csv": "^2.4.1",
    "graphql": "0.13.2",
    "graphql-schema-tools": "^0.0.6",
    "graphql-tools": "^2.24.0",
    "helmet": "^3.9.0",
    "mongodb": "^3.0.7",
    "morgan": "^1.9.0",
    "numbro": "^2.0.6",
    "promise-retry": "^1.1.1",
    "promises-all": "^1.0.0",
    "through2": "^2.0.3",
    "tslint": "^5.10.0",
    "tslint-config-prettier": "^1.12.0",
    "uuid": "^3.2.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.4",
    "@types/express-graphql": "^0.6.1",
    "@types/graphql": "^0.13.0",
    "@types/jest": "^21.1.5",
    "@types/mongodb": "^3.0.15",
    "@types/node": "^9.6.6",
    "@types/promise-retry": "^1.1.1",
    "@types/through2": "^2.0.33",
    "@types/uuid": "^3.4.3",
    "concurrently": "^3.5.0",
    "jest": "^22.4.3",
    "jest-cli": "^22.4.3",
    "nodemon": "^1.12.1",
    "parcel-bundler": "^1.8.1",
    "standard-version": "^4.2.0",
    "ts-jest": "^22.4.4",
    "tslint": "^5.8.0",
    "typescript": "2.8.3"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "mapCoverage": true,
    "testEnvironment": "node",
    "testRegex": ".*\\.spec\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ]
  }
}
