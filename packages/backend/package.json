{
  "name": "backend",
  "version": "1.0.0",
  "description": "Based on webpack-graphql-server",
  "main": "build/main.js",
  "scripts": {
    "build": "webpack",
    "build:watch": "webpack --watch",
    "pretest": "yarn build",
    "test": "jest",
    "test:watch": "yarn test -- --watch",
    "test:notify": "yarn test:watch -- --notify",
    "coverage": "yarn test -- --coverage",
    "coverage:notify": "yarn coverage -- --watch --notify",
    "start": "yarn build && node build/main.js",
    "start:watch": "concurrently \"yarn build:watch\" \"nodemon build/main.js\""
  },
  "dependencies": {
    "@types/body-parser": "1.16.7",
    "@types/cors": "2.8.1",
    "@types/express": "^4.0.39",
    "@types/helmet": "0.0.37",
    "@types/morgan": "^1.7.35",
    "apollo-server-express": "^1.2.0",
    "body-parser": "^1.18.2",
    "cors": "^2.8.4",
    "express": "^4.16.2",
    "graphql": "0.11.7",
    "graphql-schema-tools": "^0.0.6",
    "helmet": "^3.9.0",
    "morgan": "^1.9.0"
  },
  "devDependencies": {
    "@types/graphql": "^0.11.5",
    "@types/jest": "^21.1.5",
    "@types/node": "^8.0.47",
    "awesome-typescript-loader": "^3.3.0",
    "concurrently": "^3.5.0",
    "jest": "^21.2.1",
    "jest-cli": "^21.2.1",
    "nodemon": "^1.12.1",
    "standard-version": "^4.2.0",
    "ts-jest": "^21.1.4",
    "tslint": "^5.8.0",
    "tslint-loader": "^3.5.3",
    "typescript": "2.6.1",
    "webpack": "^3.8.1",
    "webpack-node-externals": "^1.6.0"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "mapCoverage": true,
    "testEnvironment": "node",
    "testRegex": ".*\\.spec\\.ts$",
    "moduleFileExtensions": ["ts", "js", "json"]
  }
}
