{
  "name": "backend",
  "version": "1.0.0",
  "description": "Based on webpack-graphql-server",
  "main": "dist/main.js",
  "scripts": {
    "build": "cross-env NODE_ENV=production webpack",
    "build:watch": "cross-env NODE_ENV=development webpack --watch",
    "clean": "rm -rf build dist",
    "pretest": "yarn build",
    "test": "jest",
    "test:watch": "yarn test -- --watch",
    "test:notify": "yarn test:watch -- --notify",
    "coverage": "yarn test -- --coverage",
    "coverage:notify": "yarn coverage -- --watch --notify",
    "start": "cross-env NODE_ENV=development yarn build && node dist/main.js",
    "start:watch": "yarn build && concurrently \"yarn build:watch\" \"cross-env NODE_ENV=development nodemon dist/main.js\""
  },
  "dependencies": {
    "@types/body-parser": "1.16.8",
    "@types/cors": "2.8.3",
    "@types/express": "^4.0.39",
    "@types/helmet": "0.0.37",
    "@types/morgan": "^1.7.35",
    "apollo-server-express": "^1.2.0",
    "body-parser": "^1.18.2",
    "cors": "^2.8.4",
    "cross-env": "^5.1.4",
    "express": "^4.16.2",
    "express-graphql": "^0.6.12",
    "graphql": "0.13.2",
    "graphql-schema-tools": "^0.0.6",
    "graphql-tools": "^2.24.0",
    "helmet": "^3.9.0",
    "mongoose": "^5.0.15",
    "morgan": "^1.9.0",
    "ts-loader": "^4.2.0",
    "uuid": "^3.2.1"
  },
  "devDependencies": {
    "@types/express-graphql": "^0.6.1",
    "@types/graphql": "^0.13.0",
    "@types/jest": "^21.1.5",
    "@types/mongoose": "^5.0.10",
    "@types/node": "^9.6.6",
    "@types/uuid": "^3.4.3",
    "concurrently": "^3.5.0",
    "jest": "^21.2.1",
    "jest-cli": "^21.2.1",
    "nodemon": "^1.12.1",
    "standard-version": "^4.2.0",
    "ts-jest": "^21.1.4",
    "tslint": "^5.8.0",
    "tslint-loader": "^3.5.3",
    "typescript": "2.8.3",
    "webpack": "^4.6.0",
    "webpack-cli": "^2.0.15",
    "webpack-node-externals": "^1.6.0"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "mapCoverage": true,
    "testEnvironment": "node",
    "testRegex": ".*\\.spec\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ]
  }
}
