{
  "name": "@masterthesis/backend",
  "version": "1.0.0",
  "private": true,
  "license": "MIT",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "clean": "rm -rf dist node_modules",
    "lint": "tslint -p . --fix",
    "start": "tsc && cross-env SESSION_SECRET=secret PORT=3000 NODE_ENV=development node dist/main.js",
    "test": "jest --logHeapUsage --coverage  --maxWorkers=4 --forceExit",
    "test:watch": "jest --watch --maxWorkers=2"
  },
  "dependencies": {
    "@masterthesis/shared": "1.0.0",
    "@types/body-parser": "1.17.0",
    "@types/express": "^4.16.0",
    "@types/express-session": "^1.15.11",
    "@types/helmet": "0.0.42",
    "@types/morgan": "^1.7.35",
    "apollo-server-caching": "^0.3.1",
    "apollo-server-express": "^2.1.0",
    "bcrypt": "^3.0.1",
    "body-parser": "^1.18.3",
    "casual": "^1.5.19",
    "connect-mongo": "^2.0.1",
    "cors": "^2.8.4",
    "cross-env": "^5.2.0",
    "express": "^4.16.2",
    "express-session": "^1.15.6",
    "fast-csv": "^2.4.1",
    "graphql": "14.0.2",
    "graphql-schema-tools": "^0.0.6",
    "graphql-tools": "^4.0.3",
    "helmet": "^3.15.1",
    "mongodb": "^3.1.6",
    "morgan": "^1.9.1",
    "numbro": "^2.1.0",
    "promise-batcher": "^1.0.1",
    "promise-queue": "^2.2.5",
    "promise-retry": "^1.1.1",
    "promises-all": "^1.0.0",
    "raven": "^2.6.4",
    "uuid": "^3.2.1",
    "winston": "^3.0.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/connect-mongo": "^0.0.39",
    "@types/cors": "^2.8.4",
    "@types/graphql": "^14.0.3",
    "@types/jest": "^23.1.1",
    "@types/mongodb": "^3.0.21",
    "@types/node": "^10.3.5",
    "@types/promise-queue": "^2.2.0",
    "@types/promise-retry": "^1.1.1",
    "@types/raven": "^2.5.1",
    "@types/uuid": "^3.4.3",
    "concurrently": "^4.0.1",
    "jest": "^23.0.0",
    "jest-environment-node": "^23.0.0",
    "jest-localstorage-mock": "^2.2.0",
    "mongodb-memory-server": "^2.6.0",
    "standard-version": "^4.4.0",
    "ts-jest": "^23.10.0",
    "tslint": "^5.10.0",
    "tslint-config-prettier": "^1.13.0",
    "typescript": "3.1.3",
    "weak": "^1.0.1"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "globals": {
      "NODE_ENV": "test",
      "ts-jest": {
        "diagnostics": {
          "warnOnly": true,
          "pathRegex": "\\.(spec|test)\\.ts$",
          "ignoreCodes": [
            "TS2531",
            "TS2532"
          ]
        }
      }
    },
    "testEnvironment": "./testEnvironment",
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "testURL": "http://localhost/",
    "setupFiles": [
      "jest-localstorage-mock"
    ]
  },
  "workspaces": {
    "nohoist": [
      "**"
    ]
  }
}
