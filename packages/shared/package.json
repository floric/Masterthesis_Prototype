{
  "name": "@masterthesis/shared",
  "version": "1.0.0",
  "license": "MIT",
  "main": "lib/index.js",
  "dependencies": {
    "mongodb": "^3.0.10",
    "uuid": "^3.2.1"
  },
  "typings": "lib/index.d.ts",
  "author": {
    "name": "Florian Richter"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "lint": "tslint -p . --fix",
    "clean": "rm -rf lib node_modules",
    "test": "jest --coverage"
  },
  "devDependencies": {
    "@types/mongodb": "^3.1.20",
    "@types/uuid": "^3.4.3",
    "weak": "^1.0.1"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.{ts,tsx}",
      "!**/node_modules/**",
      "!**/lib/**"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "testURL": "http://localhost/"
  }
}
